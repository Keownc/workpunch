<div class="container" ng-controller="authController">
    <div class="row">
        <div class="col-sm-6 col-md-5 col-lg-6">
            <form ng-submit="signup()">
                <div class="form-group">
                    <label for="exampleInputText">Employee ID</label>
                    <input type="text" class="form-control" id="exampleInputText" placeholder="Employee ID" ng-model="newuser.employeeId" >
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="exampleInputText" placeholder="username" ng-model="newuser.username" >
                </div>
                <div class="form-group">
                    <label for="employeeId">Password</label>
                    <input type="password" class="form-control" id="employeeId" placeholder="Password" ng-model="newuser.password">
                </div>
                <div class="form-group">
                    <label for="fName">First Name</label>
                    <input type="text" class="form-control" id="fName" placeholder="John" ng-model="newuser.firstName">
                </div><div class="form-group">
                    <label for="lName">Last Name</label>
                    <input type="text" class="form-control" id="lName" placeholder="Smith" ng-model="newuser.lastName">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Email" ng-model="newuser.email">
                </div>
                <div class="form-group">
                    <label for="company">Company</label>
                    <input type="text" class="form-control" id="company" placeholder="Full Sail" ng-model="newuser.company">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
                <a href="/" ><button type="button" class="main btn btn-primary">Back</button></a>
            </form>
        </div>
    </div>
</div>
